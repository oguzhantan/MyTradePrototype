@model MyTradePrototype.Models.Trade

@{
    ViewData["Title"] = "Trade Detayı";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm mb-3">
    <div class="card-header">
        Trade Bilgileri
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Ürün Adı</dt>
            <dd class="col-sm-9">@Model.ProductName</dd>

            <dt class="col-sm-3">Miktar</dt>
            <dd class="col-sm-9">@Model.Quantity</dd>

            <dt class="col-sm-3">Fiyat</dt>
            <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

            <dt class="col-sm-3">Alıcı</dt>
            <dd class="col-sm-9">@Model.Buyer</dd>

            <dt class="col-sm-3">Satıcı</dt>
            <dd class="col-sm-9">@Model.Seller</dd>

            <dt class="col-sm-3">Tarih</dt>
            <dd class="col-sm-9">@Model.TradeDate.ToString("yyyy-MM-dd")</dd>
        </dl>
    </div>
    <div class="card-footer text-end">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
            <i class="bi bi-pencil-square"></i> Düzenle
        </a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger me-2">
            <i class="bi bi-trash"></i> Sil
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Listeye Dön
        </a>
    </div>
</div>
