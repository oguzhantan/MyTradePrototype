@model MyTradePrototype.Models.Trade

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Trade</h1>

<h3>Are you sure you want to delete this trade?</h3>

<div>
    <h4>@Model.ProductName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">Buyer</dt>
        <dd class="col-sm-10">@Model.Buyer</dd>

        <dt class="col-sm-2">Seller</dt>
        <dd class="col-sm-10">@Model.Seller</dd>

        <dt class="col-sm-2">Trade Date</dt>
        <dd class="col-sm-10">@Model.TradeDate.ToString("yyyy-MM-dd")</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index">Back to List</a>
</form>
