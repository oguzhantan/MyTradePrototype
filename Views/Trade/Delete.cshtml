@model MyTradePrototype.Models.Trade

@{
    ViewData["Title"] = "Trade Sil";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-danger">
    <h5>Bu kaydı silmek istediğinizden emin misiniz?</h5>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Product Name</dt>
            <dd class="col-sm-9">@Model.ProductName</dd>

            <dt class="col-sm-3">Quantity</dt>
            <dd class="col-sm-9">@Model.Quantity</dd>

            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">@Model.Price</dd>

            <dt class="col-sm-3">Buyer</dt>
            <dd class="col-sm-9">@Model.Buyer</dd>

            <dt class="col-sm-3">Seller</dt>
            <dd class="col-sm-9">@Model.Seller</dd>

            <dt class="col-sm-3">Trade Date</dt>
            <dd class="col-sm-9">@Model.TradeDate.ToString("yyyy-MM-dd")</dd>
        </dl>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Sil</button>
            <a asp-action="Index" class="btn btn-secondary">İptal</a>
        </form>
    </div>
</div>
