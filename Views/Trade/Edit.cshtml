@model MyTradePrototype.Models.Trade

@{
    ViewData["Title"] = "Edit Trade";
}

<h1>Edit Trade</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Buyer"></label>
        <input asp-for="Buyer" class="form-control" />
        <span asp-validation-for="Buyer" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Seller"></label>
        <input asp-for="Seller" class="form-control" />
        <span asp-validation-for="Seller" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TradeDate"></label>
        <input asp-for="TradeDate" class="form-control" type="date" />
        <span asp-validation-for="TradeDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
