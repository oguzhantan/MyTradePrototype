@model MyTradePrototype.Models.Trade

@{
    ViewData["Title"] = "Edit Trade";
}

<h2>Edit Trade</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Buyer"></label>
        <input asp-for="Buyer" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Seller"></label>
        <input asp-for="Seller" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="TradeDate"></label>
        <input asp-for="TradeDate" class="form-control" type="date" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button> |
    <a asp-action="Index">Back to List</a>
</form>
